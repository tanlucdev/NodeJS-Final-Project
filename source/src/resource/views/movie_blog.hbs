<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/movie_blog.css">
    <title>Blog điện ảnh</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row cover">
            <div class="col-1"></div>
            <div class="col-7">

                <div class="row">
                    <div class="link mb-3">
                        <a href="/">Trang chủ</a>
                        <label id="arrow">></label>
                        Blog điện ảnh
                    </div>
                    <div class="movie-blog">
                        <h4>BLOG ĐIỆN ẢNH</h4>
                    </div>
                </div>

                {{#each blogs}}
                <div class="movie-item">
                    <div class="row">
                        <div class="movie-image col-4">
                            <a href="/chi-tiet-blog-dien-anh/{{matin}}">
                                <img src="{{this.hinhanh}}">
                            </a>
                        </div>
                        <div class="movie-info col-7">
                            <div class="movie-name">
                                <a href="/chi-tiet-blog-dien-anh/{{matin}}">
                                    <h5>{{this.tieude}}</h5>
                                </a>
                            </div>
                            <div class="movie-detail">
                                <label class="movie-views-lbl">Lượt xem: <label
                                        id="count-view">{{this.luotxem}}</label></label>
                            </div>
                            <div class="movie-description">
                                <p>
                                    {{this.noidung}}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>

            <div class="col-3 right">
                <div class="now-showing">
                    <h4>PHIM ĐANG CHIẾU</h4>
                </div>
                {{#each all4films}}
                <div class="row">
                    <div class="col right-movie-item">
                        <img class="movie-img" src="/img/{{hinhngang}}" alt="" />
                        <div class="hidden-buy-ticket">
                            <p><label class="age">C{{dotuoi}}</label></p>
                            <a href="/chi-tiet-phim/{{maphim}}">
                                <button class="hidden-buy-ticket-btn">CHI TIẾT</button>
                            </a>
                        </div>
                        <div class="right-movie-name">
                            <h5>{{tenphim}}</h5>
                        </div>
                    </div>
                </div>
                {{/each}}
                <div class="view-more">
                    <a href="/phim-dang-chieu">
                        <button class="view-more-btn">
                            XEM THÊM<label id="right-arrow">→</label>
                        </button>
                    </a>
                </div>
            </div>
        </div>
        
    </div>
</body>

</html>