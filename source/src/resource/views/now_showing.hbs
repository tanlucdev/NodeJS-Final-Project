<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/now_showing.css" />
    <title>Phim đang chiếu</title>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-1"></div>
            <div class="col-10">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <h5>PHIM ĐANG CHIẾU</h5>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="phim-sap-chieu">
                            <h5>PHIM SẮP CHIẾU</h5>
                        </a>
                    </li>
                </ul>

                <div class="movie">
                    <div class="row">
                        {{#each films}}
                        <div class="col-lg-3 col-md-4 col-sm-6 movie-item">
                            <div class="image-container">
                                <img src="./img/{{poster}}" class="movie-image" />
                                <div class="hidden-content">
                                    <p><label class="movie-c">C{{dotuoi}}</label></p>
                                    <a href="/chi-tiet-phim/{{maphim}}">
                                        <button class="hidden-button" id="hidden-button">CHI TIẾT</button>
                                    </a>
                                </div>
                            </div>
                            <div class="movie-name">
                                <h6>{{tenphim}}</h6>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>

                <div class="movie-des">
                    <div class="cinema-des">
                        <div class="cinema-name-des">
                            <h4>L2DBT CINEMA</h4>
                        </div>
                    </div>
                    {{#each films}}
                    <div class="des">
                        <div class="movie-des">
                            <h6>{{tenphim}}</h6>
                            <p>{{mota}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</body>

</html>