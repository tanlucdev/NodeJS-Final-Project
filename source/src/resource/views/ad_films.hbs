    const inputThoiLuong = document.getElementById("inputThoiLuong");
    const inputNgayKhoiChieu = document.getElementById("inputNgayKhoiChieu");
    const inputMoTa = document.getElementById("inputMoTa");
    const inputPoster = document.getElementById("inputPoster");
    const inputHinhNgang = document.getElementById("inputHinhNgang");
    const inputDoTuoi = document.getElementById("inputDoTuoi");
    const inputTrailer = document.getElementById("inputTrailer");
    const inputTrangThai = document.getElementById("inputTrangThai");

    const btn__update = document.getElementById("btn__update");
    const btn__hide = document.getElementById("btn__hide");
    const btnUpdate = document.getElementById("btn-update");
    const btnAdd = document.getElementById("btn-add");
    const content = document.getElementById('content')

    const blurBg = document.querySelector('#blur')

    document.getElementById("img__admin").addEventListener('click', () => {
        window.location.href = '/admin'
    })



    function add() {
        form__add.style.display = 'block';
        blurBg.style.display = 'block';
        btnAdd.addEventListener('click', (e) => {
            form__add.addEventListener('submit', (e) => {
                e.preventDefault();
            })
            e.preventDefault()
            fetch(`http://localhost:3000/admin/api/addFilms`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    maphim: inputMaPhim1.value,
                    tenphim: inputTenPhim1.value,
                    theloai: inputTheLoai1.value,
                    dienvien: inputDienVien1.value,
                    quocgia: inputQuocGia1.value,
                    daodien: inputDaoDien1.value,
                    diemdanhgia: inputDiemDanhGia1.value,
                    thoiluong: inputThoiLuong1.value,
                    ngaykhoichieu: inputNgayKhoiChieu1.value,
                    mota: inputMoTa1.value,
                    poster: inputPoster1.value,
                    hinhngang: inputHinhNgang1.value,
                    dotuoi: inputDoTuoi1.value,
                    trailer: inputTrailer1.value,
                    trangthai: inputTrangThai1.value
                })
            })
                .then(response => {
                    return response.json();
                })
                .then(data => {
                    if (data.status == 0) {
                        form__add.style.display = 'none'
                        showAlertSuccess(`Thêm thông tin phim thành công!`)
                    } else {
                        form__add.style.display = 'none'
                        showAlertFail(`Thêm thông tin phim thất bại!`)
                    }
                })
                .catch(error => {
                    console.log(error)
                });
        })
    }
    function update(maphim) {
        form__update.style.display = 'block';
        blurBg.style.display = 'block';

        const url = `http://localhost:3000/admin/api/get-films-info/${maphim}`
        fetch(url, {
            method: 'get',
            headers: {
                'Content-Type': 'application/json'
            }
        })
            .then(response => {
                return response.json();
            })
            .then(data => {
                if (data.result) {
                    inputTenPhim.value = data.result[0].tenphim
                    inputTheLoai.value = data.result[0].theloai
                    inputDienVien.value = data.result[0].dienvien
                    inputQuocGia.value = data.result[0].quocgia
                    inputDaoDien.value = data.result[0].daodien
                    inputDiemDanhGia.value = data.result[0].diemdanhgia
                    inputThoiLuong.value = data.result[0].thoiluong
                    inputNgayKhoiChieu.value = data.result[0].ngaykhoichieu
                    inputMoTa.value = data.result[0].mota
                    inputPoster.value = data.result[0].poster
                    inputHinhNgang.value = data.result[0].hinhngang
                    inputDoTuoi.value = data.result[0].dotuoi
                    inputTrailer.value = data.result[0].trailer
                    inputTrangThai.value = data.result[0].trangthai

                    btnUpdate.addEventListener('click', (e) => {
                        form__update.addEventListener('submit', (e) => {
                            e.preventDefault();
                        })
                        e.preventDefault()
                        fetch(`http://localhost:3000/admin/api/updateFilms/${maphim}`, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                tenphim: inputTenPhim.value,
                                theloai: inputTheLoai.value,
                                dienvien: inputDienVien.value,
                                quocgia: inputQuocGia.value,
                                daodien: inputDaoDien.value,
                                diemdanhgia: inputDiemDanhGia.value,
                                thoiluong: inputThoiLuong.value,
                                ngaykhoichieu: inputNgayKhoiChieu.value,
                                mota: inputMoTa.value,
                                poster: inputPoster.value,
                                hinhngang: inputHinhNgang.value,
                                dotuoi: inputDoTuoi.value,
                                trailer: inputTrailer.value,
                                trangthai: inputTrangThai.value
                            })
                        })
                            .then(response => {
                                return response.json();
                            })
                            .then(data => {
                                if (data.status>0) {
                                    form__update.style.display = 'none'
                                    showAlertSuccess(`Cập nhật thông tin phim ${maphim} thành công!`)
                                } else {
                                    form__update.style.display = 'none'
                                    showAlertFail(`Cập nhật thông tin phim ${maphim} thất bại!`)
                                }
                            })
                            .catch(error => {
                                console.log(error)
                            });
                    })
                }
            })
            .catch(error => {
                console.log(error)
            });
    }
    function hide(maphim) {
        btnAccept.addEventListener('click', () => {
            fetch(`http://localhost:3000/admin/api/hideFilms/${maphim}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
            })
                .then(response => {
                    return response.json();
                })
                .then(data => {
                    if (data.status>0) {
                        document.getElementById('exampleModal').classList.add('d-none');
                        document.querySelector('.modal-backdrop').classList.add('d-none');
                        showAlertSuccess(`Ẩn thông tin phim ${maphim} thành công!`)
                    } else {
                        showAlertFail(`Ẩn thông tin phim ${maphim} thất bại!`)
                    }
                })
                .catch(error => {
                    console.log(error)
                });
        })
    }

    blurBg.addEventListener('click', () => {
        form__update.style.display = 'none';
        form__add.style.display = 'none';
        blurBg.style.display = 'none';
    })

    img__close.addEventListener('click', () => {
        blurBg.style.display = 'none';
        form__update.style.display = 'none';
    })


    img__close2.addEventListener('click', () => {
        blurBg.style.display = 'none';
        form__add.style.display = 'none';
    })


    function showAlertSuccess(msg) {
        const flash_success = document.getElementById("flash-alert-success");
        flash_success.innerHTML = `${msg}`;
        flash_success.classList.remove('d-none');

        setTimeout(function () {
            flash_success.classList.add('d-none');
            window.location.reload()
        }, 1300);
    }

    function showAlertFail(msg) {
        const flash_fail = document.getElementById("flash-alert-danger");
        flash_fail.innerHTML = `${msg}`;
        flash_fail.classList.remove('d-none');

        setTimeout(function () {
            flash_fail.classList.add('d-none');
            window.location.reload()
        }, 1300);
    }
</script>

